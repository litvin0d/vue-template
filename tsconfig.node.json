{
	"extends": "@tsconfig/node20/tsconfig.json",
	"compilerOptions": {
		"composite": true,
		"noEmit": true,
		"tsBuildInfoFile": "./node_modules/.tmp/tsconfig.node.tsbuildinfo",
		"module": "ESNext",
		"moduleResolution": "node",
		"types": [
			"node"
		],
		"allowSyntheticDefaultImports": true,
		"skipLibCheck": true
	},
	"include": [
		"vite.config.*",
		"vitest.config.*",
		"cypress.config.*",
		"nightwatch.conf.*",
		"playwright.config.*"
	],
	"exclude": [
		"node_modules",
		"dist"
	]
}
